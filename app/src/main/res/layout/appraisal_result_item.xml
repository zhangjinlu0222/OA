<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/appraisal_ig_result_item_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_appraisal_date"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="33dp"
            android:gravity="center_vertical"
            android:text="@string/appraisal"
            android:textColor="#73a9ed"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="13dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="33dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/appraisal_ig_car_branch" />

            <TextView
                android:id="@+id/tv_appraisal_car_branch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="@string/appraisal"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="33dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/appraisal_ig_car_model" />

            <TextView
                android:id="@+id/tv_appraisal_car_model"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="@string/appraisal"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="33dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/appraisal_ig_car_price" />

            <TextView
                android:id="@+id/tv_appraisal_car_milage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="@string/appraisal"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="33dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/appraisal_ig_date" />

            <TextView
                android:id="@+id/tv_appraisal_car_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:gravity="center_vertical"
                android:text="@string/appraisal"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="13dp"
            android:background="#e5e5e5" />

        <TextView
            android:id="@+id/tv_appraisal_car_price"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="33dp"
            android:gravity="center_vertical"
            android:text="@string/appraisal"
            android:textColor="#73a9ed"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>