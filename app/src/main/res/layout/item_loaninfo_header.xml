<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".LoanDetail.View.LoanDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/border_grey_eeeeee"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="租赁信息"
            android:textColor="#171717"
            android:textSize="13sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="29dp"
        android:baselineAligned="false"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/border_grey_lbr_eeeeee"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="租金本金"
                android:textColor="#171717"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_amount_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_amount"
                android:gravity="center"
                android:text="200000"
                android:textColor="#4E80F5"
                android:textSize="13sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_grey_br_eeeeee"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_month_interest"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="租金利率"
                android:textColor="#171717"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_month_interest_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_month_interest"
                android:gravity="center"
                android:text="100"
                android:textColor="#4E80F5"
                android:textSize="13sp" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="29dp"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/border_grey_lbr_eeeeee"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_actual_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:text="租金总额"
                android:textColor="#171717"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/border_grey_br_eeeeee"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_actual_money_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="200"
                android:textColor="#4E80F5"
                android:textSize="13sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>