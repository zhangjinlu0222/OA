<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#174a80">

    <TextView
        android:id="@+id/item_loan_request_group_title"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="@string/eg_name"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/item_loan_request_group_button"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/picture_back" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/item_loan_request_group_button"
        android:gravity="center_vertical"
        android:textColor="#eeeeee"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/reedit"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="@string/reedit"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/refuse"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/date"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="@string/refuse"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:visibility="gone" />

</RelativeLayout>